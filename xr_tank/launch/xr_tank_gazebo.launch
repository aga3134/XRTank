<launch>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- open empty world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find xr_tank)/worlds/xr_tank.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- load robot -->
  <param name="robot_description"
    command="$(find xacro)/xacro '$(find xr_tank)/robot_model/xr_tank.xacro'" />

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-urdf -model xr_tank -param robot_description"/>

  <!-- load ros controller -->
  <rosparam file="$(find xr_tank)/config/xr_tank_control.yaml" command="load"/>

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="xr_tank" args="joint_state_controller
    arm_controller gripper_l_position_controller
    cam_pan_position_controller cam_tilt_position_controller
    wheel_l_effort_controller wheel_r_effort_controller"/>

  <!-- moveit arm control -->
  <include file="$(find xr_tank_moveit)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="arm_control_node" pkg="xr_tank" type="arm_control_node.py" output="screen">
    <remap from="/joint_states" to="/xr_tank/joint_states"/>
  </node>

  <!-- car control -->
  <node name="car_control_node" pkg="xr_tank" type="car_control_node.py" output="screen">
      <param name="leftRatio" value="1" />
      <param name="rightRatio" value="1" />
  </node>


  <include file="$(find xr_tank)/launch/joy_control.launch"></include>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
  respawn="false" output="screen">
    <remap from="/joint_states" to="/xr_tank/joint_states"/>
  </node>


  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find xr_tank)/config/xr_tank_moveit.rviz"/>


</launch>
